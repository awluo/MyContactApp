<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amy.mycontactapp.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="50dp"
        android:layout_height="23dp"
        android:text="NAME: "
        android:layout_marginEnd="13dp"
        app:layout_constraintRight_toLeftOf="@+id/editText_Name"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/editText_Number"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Name"
        android:layout_width="195dp"
        android:layout_height="35dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="48dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_name"
        tools:layout_constraintBaseline_creator="1" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addData"
        android:text="Add Data"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUMBER: "
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toLeftOf="@+id/editText_Number"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginTop="149dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_Number"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="22dp"
        android:layout_marginStart="19dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView_number"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_age"
        android:layout_width="39dp"
        android:layout_height="0dp"
        android:layout_marginEnd="30dp"
        android:text="AGE: "
        app:layout_constraintRight_toLeftOf="@+id/editText_Age"
        app:layout_constraintTop_toTopOf="@+id/editText_Age"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editText_Age"
        android:layout_width="191dp"
        android:layout_height="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginEnd="46dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/editText_Number" />

</android.support.constraint.ConstraintLayout>
